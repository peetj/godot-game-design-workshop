# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Special rules for Markdown or text files
[*.md]
trim_trailing_whitespace = false

[*.txt]
trim_trailing_whitespace = false

# Optional: specific Godot file types
[*.gd]
indent_style = space
indent_size = 4

[*.tscn]
indent_style = space
indent_size = 4

[*.tres]
indent_style = space
indent_size = 4

